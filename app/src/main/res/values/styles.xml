<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Interactive -->

    <!-- Button Style -->
    <style name="buttonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- ?attr -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_outline_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- NestedEditText Style -->
    <style name="nestedEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">8dp</item>
        <!-- ?attr -->
        <item name="hintTextColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Error message Style -->
    <style name="textInputLayoutErrorStyle" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/design_default_color_error</item>
        <item name="android:textSize">10sp</item>
    </style>


    <!-- Custom EditText Style -->
    <style name="customEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="android:minLines">3</item>
        <item name="android:gravity">top|start</item>
    </style>


    <!-- EditText Style -->
    <style name="editTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">8dp</item>
        <item name="boxStrokeColor">@color/text_input_outline_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <!-- ?attr -->
        <item name="hintTextColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Spinner Style -->
    <style name="spinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:popupBackground">@drawable/rounded_popup_background</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
        <item name="android:dropDownHorizontalOffset">8dp</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="progressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:indeterminateTint">@color/primary_color</item>
    </style>

    <!-- Texts -->
    <style name="headerTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="infoLabelTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="infoDataTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="warningStyle" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="dividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <!--Card Style-->

    <!-- CardView Style -->
    <style name="cardViewStyle">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">?attr/colorOnSecondary</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- TextView Style -->
    <style name="textViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!--navigation-->

    <style name="bottomNavBarStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="tabViewTabsStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

</resources>