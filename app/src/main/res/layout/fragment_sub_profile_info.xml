<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Employee Login -->
    <TextView
        android:id="@+id/profile_employee_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <!-- Employment Date -->
    <TextView
        android:id="@+id/profile_employment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="#888888"
        android:textSize="14sp" />

    <!-- Personal Data Section Header -->
    <TextView
        android:id="@+id/profile_data_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/profile_sub_info_personal_data_label"
        android:textColor="#555555"
        android:textSize="16sp" />

    <!-- Full Name -->
    <TextView
        android:id="@+id/profile_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <!-- Full Name Label -->
    <TextView
        android:id="@+id/profile_full_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/profile_sub_info_fullname_label"
        android:textColor="#888888"
        android:textSize="14sp" />

    <!-- Contact Phone -->
    <TextView
        android:id="@+id/profile_contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Contact Phone Label -->
    <TextView
        android:id="@+id/profile_contact_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/profile_sub_info_contact_phone"
        android:textColor="#888888"
        android:textSize="14sp" />

    <!-- Date of Birth -->
    <TextView
        android:id="@+id/profile_date_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Date of Birth Label -->
    <TextView
        android:id="@+id/profile_date_of_birth_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/profile_sub_info_birth_date_label"
        android:textColor="#888888"
        android:textSize="14sp" />

    <!-- Email -->
    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Email Label -->
    <TextView
        android:id="@+id/profile_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/profile_sub_info_email_label"
        android:textColor="#888888"
        android:textSize="14sp" />

    <!-- Position -->
    <TextView
        android:id="@+id/tprofile_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Position Label -->
    <TextView
        android:id="@+id/profile_position_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/profile_sub_info_position_label"
        android:textColor="#888888"
        android:textSize="14sp" />

    <!-- Warning -->
    <TextView
        android:id="@+id/profile_warning_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/profile_sub_info_warning_label"
        android:textColor="#FF0000"
        android:textSize="14sp" />
</LinearLayout>

