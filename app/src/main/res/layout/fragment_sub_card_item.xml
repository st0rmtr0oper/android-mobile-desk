<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/card_specialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ИНСТРУМЕНТЫ"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <!-- Section Number -->
        <TextView
            android:id="@+id/card_workplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Участок #2"
            android:textSize="16sp"
            android:textColor="#FF00FF"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/card_specialization"
            android:layout_marginTop="8dp"/>
<!--            android:progressDrawable="@drawable/progress_bar_drawable"-->
<!--             />-->

        <!-- Task Description -->
        <TextView
            android:id="@+id/card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="сломалась дрель"
            android:textSize="18sp"
            android:textColor="#008000"
            android:layout_below="@+id/progressBar"
            android:layout_marginTop="8dp"/>

        <!-- Status -->
        <TextView
            android:id="@+id/card_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="выполнено"
            android:textSize="16sp"
            android:textColor="#FF00FF"
            android:layout_below="@+id/card_text"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"/>

        <!-- Date -->
        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/05/2024"
            android:textSize="16sp"
            android:textColor="#888888"
            android:layout_below="@+id/card_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
